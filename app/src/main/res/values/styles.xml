<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:panelBackground">@color/dark</item>
        <item name="android:itemTextAppearance">@style/TextStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/neutral</item>
        <item name="android:alertDialogTheme">@style/AlertDialog.AppCompat</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarTabStyle">@style/TabStyle</item>
        <item name="textAppearanceListItem">@style/TextStyle</item>
        <item name="android:gridViewStyle">@style/TextStyle</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:textAppearance">@style/TextStyle</item>
    </style>
    <style name="ActionBarStyle" parent="@style/android:Widget.Holo.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/ActionBarTitleAppearance</item>
        <item name="android:icon">@color/transparent</item>
        <item name="android:background">@color/transparent_white</item>
        <item name="android:backgroundStacked">@color/transparent_white</item>

    </style>
    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@string/font_family_text_medium</item>
    </style>

    <style name="ActionBarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/bar_title_text_size</item>
        <item name="android:textColor">@color/white_dark</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>
    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="TabStyle" parent="@style/Base.Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">75dp</item>
    </style>

    <style name="AppDefaultTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppDefaultTheme.PopupOverlay" parent="AppTheme"/>
</resources>